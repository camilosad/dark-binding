- model_class = Champion
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize

- @champions.each_slice(4) do |champion_group|
  .row
    - champion_group.each do |champion|
      .col-sm-6.col-md-4.col-lg-3
        .thumbnail
          %img{:alt => champion.name, :src => "http://ddragon.leagueoflegends.com/cdn/6.20.1/img/champion/Morgana.png"}/
          .caption.text-center
            %h3= champion.name
            %p= champion.info
            %p
              = link_to "See details", champion_path(champion), class: 'btn btn-default'