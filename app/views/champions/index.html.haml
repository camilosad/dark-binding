- model_class = Champion
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:riot_id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:lore)
      %th= model_class.human_attribute_name(:image)
      %th= model_class.human_attribute_name(:info)
      %th= model_class.human_attribute_name(:spells)
      %th= model_class.human_attribute_name(:passive)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @champions.each do |champion|
      %tr
        %td= link_to champion.id, champion_path(champion)
        %td= champion.riot_id
        %td= champion.name
        %td= champion.title
        %td= champion.lore
        %td= champion.image
        %td= champion.info
        %td= champion.spells
        %td= champion.passive
        %td=l champion.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_champion_path(champion), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), champion_path(champion), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_champion_path, :class => 'btn btn-primary'
